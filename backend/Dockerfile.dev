FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Ensure i18n directory exists in dist after build
RUN mkdir -p dist/i18n || true

# Expose port
EXPOSE 3000

# Start in dev mode (with watch)
CMD ["npm", "run", "start:dev"]

